{{#sprites}}
.{{name}} {
    display: block;  
    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
}
{{/sprites}}
{{#sprites}}
.{{name}}.retina {
    display: block;  
    background-position: {{half offset_x}} {{half offset_y}};    
    width: {{half width }};
    height: {{half height}};
    background-size: {{retinaBGS total_width width }};
}
{{/sprites}}
{{#sprites}}
.{{name}}.autosize {
    display: block;  
    background-position: {{autoSizePosition total_width width offset_x}} {{autoSizePosition total_height height offset_y}};    
    width: {{getVW width }};
    height: {{getVW height}};
    background-size: {{retinaBGS total_width width }};
}
{{/sprites}}
